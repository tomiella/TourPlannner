<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.bif.swen.tourplanner.view.TourLogsController">

    <VBox spacing="5">
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Tour Logs" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Add" onAction="#onAddButtonClick"/>
        </HBox>

        <TableView fx:id="logTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="dateCol" text="Date" />
                <TableColumn fx:id="commentCol" text="Comment" />
                <TableColumn fx:id="durationCol" text="Duration" />
                <TableColumn fx:id="difficultyCol" text="Difficulty" />
                <TableColumn fx:id="ratingCol" text="Rating" />

            </columns>
        </TableView>
    </VBox>

</VBox>
