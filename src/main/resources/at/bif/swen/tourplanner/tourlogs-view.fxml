<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.bif.swen.tourplanner.view.MainController">

    <VBox spacing="5">
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Tour Logs" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Add" onAction="#onAddButtonClick"/>
        </HBox>

        <TableView fx:id="logTable" prefHeight="200">
            <columns>
                <TableColumn text="Date" fx:id="dateCol"/>
                <TableColumn text="Comment"   fx:id="commentCol"/>
                <TableColumn text="Duration"  fx:id="durationCol"/>
                <TableColumn text="Difficulty" fx:id="difficultyCol"/>
                <TableColumn text="Rating"    fx:id="ratingCol"/>
                <TableColumn text="Action"    fx:id="actionCol"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
