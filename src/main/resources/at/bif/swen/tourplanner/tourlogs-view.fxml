<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.bif.swen.tourplanner.view.MainController">

    <HBox spacing="20">

        <GridPane hgap="8" vgap="8">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Tour Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="descField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="From:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="fromField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="To:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="toField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Transport Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

            <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Button text="Update" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#onAddButtonClick"/>
                <Button text="Delete" style="-fx-background-color: #F44336; -fx-text-fill: white;" onAction="#onAddButtonClick"/>
            </HBox>
        </GridPane>



    </HBox>
    <VBox spacing="5">
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Tour Logs" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Add" onAction="#onAddButtonClick"/>
        </HBox>

        <TableView fx:id="logTable" prefHeight="200">
            <columns>
                <TableColumn text="Date" fx:id="dateCol"/>
                <TableColumn text="Comment"   fx:id="commentCol"/>
                <TableColumn text="Duration"  fx:id="durationCol"/>
                <TableColumn text="Difficulty" fx:id="difficultyCol"/>
                <TableColumn text="Rating"    fx:id="ratingCol"/>
                <TableColumn text="Action"    fx:id="actionCol"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
